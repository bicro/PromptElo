{
  "$schema": "https://claude.ai/schemas/hooks.json",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.promptelo/client/setup.py",
            "timeout": 10000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.promptelo/client/scorer.py",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
